
<% if logged_in? %>
<h1><u>Welcome, <%= current_user.username %>!</u></h1>
    <h3>All Posts: </h3>
    <% @posts.each do |post| %>
        <ul>
            <li><a href="/posts/<%= post.id %>"><%= post.content %></a></li>
        </ul>
    <% end %>
    <br>
    <a href= "/posts/new"><button>New Post</button></a>
<% end %>